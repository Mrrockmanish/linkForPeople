a.course.bg-anim(href="")
    .course__wrap
        .course__wrap-inner
            .course__img(style="background-image: url(assets/img/course.jpg)")
            .course__body
                .course__info
                    .course__title Тестирование, Автоматизация REST API: Postman + GIT123
                    .course__author-wrap Автор: #[.course__author Валентина Колесникова]
                .course__price
                    .course__rating-wrap
                        .rating.rating--nonactive.course__rating
                            label.rating__item
                                input.rating__input(type="radio", name="rating2", value="1")
                                .rating__stars
                                    i.fas.fa-star.rating__icon.rating__icon--full
                                    i.far.fa-star.rating__icon.rating__icon--empty
                            label.rating__item
                                input.rating__input(type="radio", name="rating2", value="2")
                                .rating__stars
                                    i.fas.fa-star.rating__icon.rating__icon--full
                                    i.far.fa-star.rating__icon.rating__icon--empty
                            label.rating__item
                                input.rating__input(type="radio", name="rating2", value="3", checked)
                                .rating__stars
                                    i.fas.fa-star.rating__icon.rating__icon--full
                                    i.far.fa-star.rating__icon.rating__icon--empty
                            label.rating__item
                                input.rating__input(type="radio", name="rating2", value="4")
                                .rating__stars
                                    i.fas.fa-star.rating__icon.rating__icon--full
                                    i.far.fa-star.rating__icon.rating__icon--empty
                            label.rating__item
                                input.rating__input(type="radio", name="rating2", value="5")
                                .rating__stars
                                    i.fas.fa-star.rating__icon.rating__icon--full
                                    i.far.fa-star.rating__icon.rating__icon--empty
                            .rating__val 4
                        .course__rating-val (50 оценок)
                    .course__type Самостоятельный
                    .course__price-wrap
                        .course__price-new #[span 799] руб.
                        .course__price-old #[span 2 799] руб.