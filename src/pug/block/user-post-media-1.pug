.user-post#post209
    .panel.panel-white.post-panel
        .user-post__header
            .user-post__header-avatar
                a(href="javascript:void(0)").avatar-circle_xl
                    img(src="./assets/img/default-avatar.png")
                .who-when
                    .user-name
                        a(href="javascript:void(0)") Константин Калиновский
                    .user-post-date
                        include ../partials/user-post-date
            .user-post__header-actions
                span.dropdown.pointer
                    .dropdown-toggle(data-toggle="dropdown")
                        i.fa.fa-ellipsis-h.icon-grey
                    ul.dropdown-menu.dropdown-menu-right
                        li
                            a(href='javascript:void:0')
                                i.fa.fa-flag
                                | Пожаловаться
                        li
                            a(href='javascript:void:0')
                                i.fa.fa-link
                                | Открыть в новой вкладке
        .user-post__content
            .post-media
                p.post-media__text Всем привет!
                .post-media__container
                    .post-media__item(onclick="showLightBox(post209, 1);")
                        a(href="javascript:void(0)" data-slide-to="1" data-href="./assets/img/backscreen.jpg")
                            img(src="./assets/img/backscreen.jpg")
        .user-post__footer
            .left-actions
                span.pointer.like-icon
                    i.fas.fa-heart.icon-blue.light-blue
                    |  1
                span.pointer.comment-icon(onclick="showComments(post209);")
                    i.far.fa-comment.icon-blue
                    |  1
                span.pointer.share-icon(onclick="showShares(post209);")
                    i.far.fa-share-alt.icon-blue
        .share-container.hide
            <div class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,gplus,twitter,qzone,viber,whatsapp,skype,telegram"></div>


        .user-post__comment.hide
