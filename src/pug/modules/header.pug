                    li
                        a(href="javascript:void(0);" data-ajax="javascript:void(0);").text-shadow-font
                            i.far.fa-newspaper
                    li#header-chat-toggle(onclick="AllChatsToggle(this.id);")
                        a(href="javascript:void(0);" data-ajax="javascript:void(0);" onclick="return false;").text-shadow-font
                            i.fa.fa-comments
                    li#header-chat-mobile
                        a(href="messages.html" data-ajax="javascript:void(0);").text-shadow-font
                            i.fa.fa-comments
                    li.dropdown.notification-container
